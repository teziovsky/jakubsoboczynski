    "lint": "eslint --quiet --fix .",
    "typecheck": "astro check",
    "fix": "npm run format && npm run lint && npm run typecheck",
    "astro": "astro",
    "lighthouse": "bunx unlighthouse --site localhost:3000",
    "commitlint": "commitlint --edit",
    "lint-staged": "lint-staged",
