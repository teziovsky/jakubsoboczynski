  "scripts": {
    "clean": "rm -rf ./.astro ./dist ./node_modules ./package-lock.json ./pnpm-lock.yaml ./bun.lockb",
    "dev": "astro dev",
    "start": "astro dev",
    "check": "astro check",
    "build": "astro build",
    "preview": "astro preview",
