    "concurrently": "^8.2.2",
    "eslint": "^9.6.0",
    "eslint-plugin-astro": "^1.2.2",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-tailwindcss": "^0.6.5"
  },
  "pnpm": {
    "overrides": {
      "zod@<=3.22.2": ">=3.22.3"
    }
  }
